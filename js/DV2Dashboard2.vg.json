{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 400,
  "data": {
      "url": "https://raw.githubusercontent.com/EthanShengFrancis/FIT3179-DV2/main/data/WeeklyFlight.csv"
  },
  "transform": [
      {
          "calculate": "toNumber(datum['Seat 2024']) / toNumber(datum['Flight 2024'])",
          "as": "SeatPerFlight"
      }
  ],
  "mark": {
      "type": "circle",
      "opacity": 0.8,
      "stroke": "black",
      "strokeWidth": 1
  },
  "encoding": {
      "x": {
          "field": "Flight 2024",
          "type": "quantitative",
          "axis": {"title": "Number of Flights (2024)"}
      },
      "y": {
          "field": "Seat 2024",
          "type": "quantitative",
          "axis": {"title": "Number of Seats (2024)"}
      },
      "size": {
          "field": "SeatPerFlight",
          "type": "quantitative",
          "title": "Seats per Flight",
          "scale": {"domain": [0, 250]}
      },
      "color": {
          "field": "Region",
          "type": "nominal",
          "legend": {"title": "Region"}
      },
      "tooltip": [
          {"field": "Region", "type": "nominal"},
          {"field": "Flight 2024", "type": "quantitative", "title": "Flights"},
          {"field": "Seat 2024", "type": "quantitative", "title": "Seats"},
          {"field": "SeatPerFlight", "type": "quantitative", "format": ".1f", "title": "Seats/Flight"}
      ]
  }
}