{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
    "text": "Monthly Tourist Arrivals to Malaysia (2019-2024)",
    "font": "Arial",
    "fontSize": 16,
    "anchor": "middle"
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/EthanShengFrancis/FIT3179-DV2/main/data/MonthlyArrivals.csv"
  },

  "params": [
    {
      "name": "startYear",
      "value": "2023",
      "bind": {
        "input": "select",
        "options": ["2019", "2020", "2021", "2022", "2023", "2024"],
        "name": "Start Year: "
      }
    },
    {
      "name": "endYear",
      "value": "2024",
      "bind": {
        "input": "select",
        "options": ["2019", "2020", "2021", "2022", "2023", "2024"],
        "name": "End Year: "
      }
    }
  ],

  "transform": [
    {"fold": ["2019", "2020", "2021", "2022", "2023", "2024"], "as": ["Year", "Arrivals"]},
    {
      "filter": "datum.Year == startYear || datum.Year == endYear"
    }
  ],

  "mark": {"type": "line", "point": true, "strokeWidth": 3},

  "encoding": {
    "x": {
      "field": "MONTH",
      "type": "ordinal",
      "sort": [
        "JANUARY","FEBRUARY","MARCH","APRIL","MAY","JUNE",
        "JULY","AUGUST","SEPTEMBER","OCTOBER","NOVEMBER","DECEMBER"
      ],
      "title": "Month",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "Arrivals",
      "type": "quantitative",
      "title": "Visitor Arrivals",
      "axis": {"format": "~s"}
    },
    "color": {
      "field": "Year",
      "type": "nominal",
      "title": "Year",
      "scale": {
        "domain": ["2019", "2020", "2021", "2022", "2023", "2024"],
        "range": ["#beaed4", "#466eb4", "#00a0e1", "#fcdb8c", "#f25038", "#000000"]
      }
    },
    "tooltip": [
      {"field": "MONTH", "type": "ordinal", "title": "Month"},
      {"field": "Year", "type": "nominal", "title": "Year"},
      {"field": "Arrivals", "type": "quantitative", "title": "Arrivals", "format": ","}
    ]
  }
}